<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/v1/xml"
  id="testruleprovider">
  
  <!-- This defaults to MIGRATION_RULES -->
  <phase>
    DISCOVERY
  </phase>
  
  <rules>
    <rule>
      <when>
        <true/>
      </when>
      <perform>
        <log message="test log message"/>
      </perform>
    </rule>
    <rule>
      <when>
        <true/>
      </when>
      <perform>
        <iteration>
            <when>
                <true/>
            </when>
            <perform>
                <log message="test log message perform"/>
            </perform>
            <otherwise>
                <log message="test log message otherwise"/>
            </otherwise>
        </iteration>
      </perform>
    </rule>
  </rules>
</ruleset>